{
  "name": "igniphp/framework",
  "description": "Swoole, PSR-7, PSR-15 modular micro anti-framework.",
  "keywords": [
    "swoole",
    "http",
    "psr-7",
    "psr-15",
    "middleware",
    "micro",
    "framework"
  ],
  "support": {
    "issues": "https://github.com/igniphp/framework/issues"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Dawid <krac> Kraczkowski",
      "email": "dawid.kraczkowski@gmail.com"
    }
  ],
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse src --level=0",
    "coverage": "vendor/bin/phpunit --coverage-html ../coverage"
  },
  "require": {
    "php": ">=7.4.0",
    "igniphp/exception": ">=1.0",
    "igniphp/network": "dev-develop",
    "igniphp/container": "dev-develop",
    "psr/container": ">=1.0",
    "psr/http-message": ">=1.0",
    "psr/http-server-middleware": ">=1.0",
    "psr/log": ">=1.0",
    "psr/simple-cache": ">=1.0",
    "symfony/routing": ">=5.2",
    "laminas/laminas-httphandlerrunner": "^1.3"
  },
  "suggest": {
    "ext-swoole": "for build in http server support."
  },
  "require-dev": {
    "league/container": ">=1.0.0",
    "phpstan/phpstan": ">=0.9.2",
    "phpunit/phpunit": "~9.5",
    "mockery/mockery": "^1.3"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/sergonie/network.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/sergonie/container.git"
    }
  ],
  "autoload": {
    "psr-4": {
      "Igni\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Igni\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  }
}
